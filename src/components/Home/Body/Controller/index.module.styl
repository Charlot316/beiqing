.controllerBody{
    width:100%;
    height:100%;
    background: rgb(240, 240, 240)
    text-align:center;
    
    .controllerButton{
        padding-top:20px;
        width:100px;
        height:90px;
        .controllerIcon{
            font-size:40px;
        }
        .controllerButtonName{
            font-size:12px;
            color:rgb(70,70,70)    
        }
         &:not(:last-child)::after {
            content:'';
            position:absolute;
            width: 60px;
            height: 1px;
            margin-top:10px;
            margin-left:-30px
            background-color: rgb(101, 98, 98);
        
        }
    }
   
}

   
    
