.controllerBody{
    width:100%;
    height:100%;
    background: rgb(240, 240, 240)
    text-align:center;
    
    .controllerButton{
        padding-top:20px;
        width:100px;
        height:90px;
        .controllerIcon{
            font-size:40px;
        }
        .controllerButtonName{
            font-size:12px;
            color:rgb(70,70,70)    
        }
        &:not(:last-child)::after {
            content:'';
            position:absolute;
            width: 60px;
            height: 1px;
            margin-top:10px;
            margin-left:-30px;
            background: -webkit-linear-gradient(left, rgb(240, 240, 240) -4%,rgb(70,70,70) 50%,rgb(240, 240, 240) 100%);
        }
    }
    .controllerButton:hover .controllerIcon {
            color:rgb(128, 128, 128) 
            cursor:pointer;
    }
    .controllerButton:hover .controllerButtonName {
            color:rgb(128, 128, 128) 
            cursor:pointer;
    }
    .controllerButton:active .controllerIcon {
            color:rgb(40, 40, 40) 
            cursor:pointer;
    }
    .controllerButton:active .controllerButtonName {
            color:rgb(40, 40, 40) 
            cursor:pointer;
    }
}

   
    
