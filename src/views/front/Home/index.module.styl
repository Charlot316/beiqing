.homeBody {
    width: 100vw;
    height: 100vh;
    position: absolute;
    top: 0;
    left: 0;

    .homeHeader {
    width: 100%;
    position: absolute;
    height: 50px;
    top: 0;
    left: 0;
    }

    .homeSelecter {
        width: 100%;
        top: 50px;
        left: 0%;
        height: 100px;
        position: absolute;
        background-color: aliceblue;
    }

    .homeContent {
        width: 100%;
        height: calc(100% - 150px);
        top: 150px;
        left: 0;
        position: absolute;
        background-color: red;
        .banner{
            position: absolute;
            top:0;
            left:0;
            width:100%;
            height:30px;
        }
        .controller{
            position: absolute;
            top:30px;
            right:0;
            width:100px;
            height:360px;

        }
    }
}

