.scenicBody {
    width: 100%;
    height: 100%;
    position: absolute;
    background: white;
    .scenicBox{
        position:absolute;
        margin:20px;
        width:calc(100% - 40px);
        height: calc(100% - 40px);
        box-shadow: 0 0 4px 1px rgba(0,0,0,.3);
        
        .scenicContent{
            position:absolute;
            left:20px;
            top:20px;
            width:calc(100% - 40px);
            height:calc(100% - 40px);
            padding:100px;
            overflow: auto;
        }
    }
}



